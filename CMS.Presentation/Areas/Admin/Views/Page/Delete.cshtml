@using CMS.Domain.Dtoes.Page
@model DeletePageDto


<div class="row">
    <div class="col-md-8;" style="font-family : yekan">
        <form method="post" style="text-align:center" id="deletePage">
            <h2>آیا از حذف اطمینان دارید ؟</h2>
            <input type="hidden" asp-for="PageId" />
            <input type="hidden" asp-for="ImageName" />
            <input type="hidden" asp-for="PageGroupId" />
            <div class="input-group2">
                <label asp-for="@Model.Title" class="control-label"></label>
                <input asp-for="@Model.Title" class="form-control" readonly />
            </div>
            <div class="input-group2">
                <label asp-for="@Model.GroupTitle" class="control-label"></label>
                <input asp-for="@Model.GroupTitle" class="form-control" readonly />
            </div>
            <div class="d-flex justify-content-around gap-3 mt-2">
                @* <button type="submit" class="btn btn-success" asp-controller="Page" asp-action="Delete" style="width:450px;margin-top:8px">حذف</button> *@
                <button type="button" class="btn btn-success" onclick="DeletePage()" style="width:450px;">حذف</button>
                @* <a type="button" class="btn btn-secondary" asp-controller="Page" asp-action="Index" style="width:450px;">بازگشت</a> *@
                <a type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#mymodal" style="width:450px;">بازگشت</a>
            </div>
        </form>
    </div>
</div>