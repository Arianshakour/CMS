@using CMS.Domain.Dtoes.PageComment
@model EditPageCommentDto

@{
    ViewData["Title"] = "ویرایش نظر";
}

<div class="row">
    <div class="col-md-8;">
        <form method="post" class="text-center" id="editPageComment">
            <h2>ویرایش نظر</h2>
            <input type="hidden" asp-for="CommentId" />
            <input type="hidden" asp-for="PageId" />
            <div class="d-flex align-items-center justify-content-between mb-3 gap-2">
                <div class="w-50">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="w-50">
                    <label asp-for="@Model.Email" class="control-label"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 d-flex align-items-center">
                <label asp-for="@Model.IsShow" class="control-label"></label>
                <input asp-for="@Model.IsShow" type="checkbox" />
                <span asp-validation-for="@Model.IsShow" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Comment" class="control-label"></label>
                <input asp-for="@Model.Comment" class="form-control" />
                <span asp-validation-for="@Model.Comment" class="text-danger"></span>
            </div>
            <div class="d-flex align-items-center justify-content-between mb-3 gap-2">
                <div class="w-50">
                    <label asp-for="@Model.PageName" class="control-label"></label>
                    <input asp-for="@Model.PageName" class="form-control" readonly />
                    <span asp-validation-for="@Model.PageName" class="text-danger"></span>
                </div>
                <div class="w-50">
                    <label asp-for="@Model.GroupName" class="control-label"></label>
                    <input asp-for="@Model.GroupName" class="form-control" readonly />
                    <span asp-validation-for="@Model.GroupName" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-around gap-3 mt-2">
                @* <button type="submit" class="btn btn-success" asp-controller="PageComment" asp-action="Edit" style="width:450px;margin-top:8px">ثبت</button> *@
                <button type="button" class="btn btn-success" onclick="EditPageComment()" style="width:450px;">ثبت</button>
                @* <a type="button" class="btn btn-secondary" asp-controller="PageComment" asp-action="Index" asp-route-pageid="@Model.PageId" style="width:450px;">بازگشت</a> *@
                <a type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#mymodal" style="width:450px;">بازگشت</a>
            </div>
        </form>
    </div>
</div>