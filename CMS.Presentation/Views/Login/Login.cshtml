@using CMS.Domain.Dtoes.Member
@model LoginDto


@section script {
    <script src="~/js/sitee.js"></script>
}


@{
    ViewData["Title"] = "ورود";
}

<div class="login-container" id="logincontainer">
    <header><h3> ورود به سایت </h3></header>
    <br />
    <div>
        <form method="post" id="loginForm">
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="ایمیل" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="رمز عبور" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label><input asp-for="RememberMe" type="checkbox" name="">  مرا بخاطر بسپار </label>
            </div>
            <div>
                @* <button type="button" class="btn btn-success" onclick="loginUserPost()"> ورود به سایت </button> *@
                <button type="submit" class="btn btn-success" asp-action="Login" asp-controller="Login"> ورود به سایت </button>
            </div>
        </form>
        <div class="footer">
            @* <p>حساب کاربری ندارید؟ <a type="button" onclick="loadRegisterPage()">ثبت‌نام کنید</a></p> *@
            <p>حساب کاربری ندارید؟ <a type="button" class="btn btn-primary" asp-action="Register" asp-controller="Login">ثبت‌نام کنید</a></p>
            @* <p>حساب کاربری ندارید؟ <a href="/Login/Register">ثبت‌نام کنید</a></p> *@
        </div>
    </div>
</div>