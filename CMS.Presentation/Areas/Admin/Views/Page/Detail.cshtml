@using CMS.Domain.Dtoes.Page
@using CMS.Domain.Common
@model DetailPageDto

<div class="row">
    <div class="col-md-4;input-group">
        <form method="post" style="text-align:center">
            <h2>جزییات دسته بندی</h2>
            <input type="hidden" asp-for="PageId" />
            <div class="input-group2">
                <label asp-for="@Model.Title" class="control-label"></label>
                <input asp-for="@Model.Title" class="form-control" readonly />
            </div>
            <div class="input-group2">
                <label asp-for="@Model.GroupTitle" class="control-label"></label>
                <input asp-for="@Model.GroupTitle" class="form-control" readonly />
            </div>
            <div class="input-group2">
                <label asp-for="@Model.ShortDescription" class="control-label"></label>
                <input asp-for="@Model.ShortDescription" class="form-control" readonly />
            </div>
            @*hich vaqt inja vaqti mikhai az extension method estefade koni nabayad bezari to asp-for bjash bzar value*@
            <div class="input-group2">
                <label asp-for="@Model.CreateDate" class="control-label"></label>
                <input value="@Model.CreateDate.ToShamsi()" class="form-control" readonly />
            </div>
            @*to chechbox readonly kar nemikone bayad disabled bezari*@
            <div class="input-group2">
                <label asp-for="@Model.ShowInSlider" class="control-label"></label>
                <input asp-for="@Model.ShowInSlider" type="checkbox" disabled />
            </div>
            <div class="input-group2 align-items-center" style="margin-top:8px">
                <a type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#mymodal" style="width:450px;">بازگشت</a>
            </div>
        </form>
    </div>
</div>