            </div>
            <div class="input-group2 align-items-center" style="margin-top:8px">
                <button type="button" class="btn btn-success" onclick="CreatePageGroup()" style="width:450px;">ثبت</button>
                @* <button type="submit" class="btn btn-success" asp-controller="PageGroup" asp-action="Create" style="width:450px;margin-top:8px">ثبت</button> *@
                <a type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#mymodal" style="width:450px;">بازگشت</a>
            </div>
        </form>
    </div>
</div>