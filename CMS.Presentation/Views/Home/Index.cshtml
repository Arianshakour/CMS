@using CMS.Domain.ViewModels
@model PageViewModel

@if (ViewBag.IsSearch == true)
{
    ViewData["Title"] = "نتایج جستجو";
}
else
{
    ViewData["Title"] = "صفحه اصلی";
}

@if (ViewBag.IsSearch == false)
{
    <div>
        @await Component.InvokeAsync("Slider")
    </div>
    <!-- last news -->
    <section class="last-news-section border-radius margin-top-60">
        <header><i class="icons icon-doc-2"></i>  <h3>آخرین آخبار ارسالی</h3> </header>
        <ul>
            @foreach (var item in Model.pageList)
            {
                <li>
                    <img class="border-radius" src="~/PageImages/@item.ImageName" style="max-width:100px">
                    <h2> <a role="button" onclick="ShowNews(@item.PageId)"> @item.Title </a></h2>
                    <p>
                        @item.ShortDescription
                    </p>
                    <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate </span>
                    <a href="" class="more-link"><i class="icons icon-more"></i></a>
                </li>
            }
        </ul>
    </section>
    <!-- End last news -->
}
else
{
    <section class="last-news-section border-radius">
        <header><i class="icons icon-doc-2"></i>  <h3>تعداد @Model.pageList.Count با عبارت @ViewBag.Name یافت شد</h3> </header>
        <ul>
            @foreach (var item in Model.pageList)
            {
                <li>
                    <img class="border-radius" src="~/PageImages/@item.ImageName" style="max-width:100px">
                    <h2> <a role="button" onclick="ShowNews(@item.PageId)"> @item.Title </a></h2>
                    <p>
                        @item.ShortDescription
                    </p>
                    <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate </span>
                    <a href="" class="more-link"><i class="icons icon-more"></i></a>
                </li>
            }
        </ul>
    </section>
}

